<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netframework461</TargetFramework>
    <UseWPF>true</UseWPF>
    <AssemblyName>AutoForm</AssemblyName>
    <Authors>Tobias Kiertscher</Authors>
    <Product>$(MSBuildProjectName)</Product>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="YAML-Mode.xshd" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="YAML-Mode.xshd" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="6.1.3.50" />
    <PackageReference Include="PuppeteerSharp" Version="6.2.0" />
    <PackageReference Include="YamlDotNet" Version="11.2.1" />
  </ItemGroup>

</Project>
